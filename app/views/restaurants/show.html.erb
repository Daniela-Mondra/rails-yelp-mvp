<div class="container">
  <p style="color: green"><%= notice %></p>

  <%= render @restaurant %>

  <div>
    <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant), class: "btn btn-primary" %> |
    <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary" %>

    <%= button_to "Destroy this restaurant", @restaurant, method: :delete, class: "my-2 btn btn-danger" %>
  </div>

  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <%= review.content %>
        Rating: <%= review.rating %>
        <%= link_to "Delete", review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"%>
      </li>
    <% end %>
  </ul>
  <br>

  <div>
    <%= link_to "Add new review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"  %>
  </div>
</div>
